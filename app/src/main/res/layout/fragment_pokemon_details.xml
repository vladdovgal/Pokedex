<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dragon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pokemon_image_card"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@drawable/pokemon_card"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/image_large"
            android:layout_height="@dimen/image_large"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/large_font"
        android:fontFamily="@font/pokemon_solid"
        android:letterSpacing="0.2"
        tools:text="Pokemon Name"
        app:layout_constraintTop_toBottomOf="@id/pokemon_image_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/medium_font"
        android:fontFamily="@font/roboto_mono"
        android:background="@drawable/card_pokemon_parameter"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHeights"
        />

    <TextView
        android:id="@+id/tvHeights"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/medium_font"
        android:background="@drawable/card_pokemon_parameter"
        android:gravity="center_horizontal"
        android:fontFamily="@font/roboto_mono"
        android:padding="5dp"
        android:backgroundTint="@color/water"
        app:layout_constraintTop_toTopOf="@id/tvWeight"
        app:layout_constraintStart_toEndOf="@id/tvWeight"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_stats"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_font"
        android:fontFamily="@font/roboto_mono_medium"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWeight"
        />


    <TextView
        android:id="@+id/hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/hp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_mono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_title"
        />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/progress_hp"
        android:layout_width="0dp"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/hp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hp"
        app:layout_constraintTop_toTopOf="@+id/hp"
        app:progressView_colorBackground="@color/white"
        app:progressView_colorProgress="@color/colorPrimary"
        app:progressView_labelColorInner="@color/white"
        app:progressView_labelColorOuter="@color/black"
        app:progressView_labelSize="@dimen/small_font"
        app:progressView_radius="12dp"
        android:fontFamily="@font/roboto_mono"
        />

    <TextView
        android:id="@+id/attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/atk"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hp"
        android:fontFamily="@font/roboto_mono"
        />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/progress_attack"
        android:layout_width="0dp"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/attack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/progress_hp"
        app:layout_constraintTop_toTopOf="@+id/attack"
        app:progressView_colorBackground="@color/white"
        app:progressView_colorProgress="@color/grass"
        app:progressView_labelColorInner="@color/white"
        app:progressView_labelColorOuter="@color/black"
        app:progressView_labelSize="@dimen/small_font"
        app:progressView_radius="12dp"
        android:fontFamily="@font/roboto_mono"
        />

    <TextView
        android:id="@+id/defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/def"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attack"
        android:fontFamily="@font/roboto_mono"
        />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/progress_defence"
        android:layout_width="0dp"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/defense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/progress_hp"
        app:layout_constraintTop_toTopOf="@+id/defense"
        app:progressView_colorBackground="@color/white"
        app:progressView_colorProgress="@color/skyBlue"
        app:progressView_labelColorInner="@color/white"
        app:progressView_labelColorOuter="@color/black"
        app:progressView_labelSize="@dimen/small_font"
        app:progressView_radius="12dp"
        android:fontFamily="@font/roboto_mono"
        />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/spd"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defense"
        android:fontFamily="@font/roboto_mono"
        />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/progress_speed"
        android:layout_width="0dp"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/progress_hp"
        app:layout_constraintTop_toTopOf="@+id/speed"
        app:progressView_colorBackground="@color/white"
        app:progressView_colorProgress="@color/dragon"
        app:progressView_labelColorInner="@color/white"
        app:progressView_labelColorOuter="@color/black"
        app:progressView_labelSize="@dimen/small_font"
        app:progressView_radius="12dp"
        android:fontFamily="@font/roboto_mono"
        />

    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/exp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed"
        android:fontFamily="@font/roboto_mono"
        />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/progress_experience"
        android:layout_width="0dp"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/exp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/progress_hp"
        app:layout_constraintTop_toTopOf="@+id/exp"
        app:progressView_colorBackground="@color/white"
        app:progressView_colorProgress="@color/orange"
        app:progressView_labelColorInner="@color/white"
        app:progressView_labelColorOuter="@color/black"
        app:progressView_labelSize="@dimen/small_font"
        app:progressView_radius="12dp"
        android:fontFamily="@font/roboto_mono"/>


</androidx.constraintlayout.widget.ConstraintLayout>